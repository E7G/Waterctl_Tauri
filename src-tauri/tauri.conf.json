{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "WaterctlTauri",
  "version": "0.1.0",
  "identifier": "com.tauri.waterctl",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "WaterctlTauri",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../public/icon.ico"
    ]
  }
}
